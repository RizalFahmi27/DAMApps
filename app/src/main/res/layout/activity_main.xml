<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="id.developer.lynx.damapps.ActivityMain">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:weightSum="10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingRight="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/reading"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/text_act_main_latihan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorRedLight"
                android:padding="@dimen/act_main_padding_text"
                android:layout_marginBottom="@dimen/act_main_margin_text"
                android:text="Latihan"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/puzzle"
                android:scaleType="fitXY"/>
            <TextView
                android:id="@+id/text_act_main_tantangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBlueLight"
                android:padding="@dimen/act_main_padding_text"
                android:layout_marginBottom="@dimen/act_main_margin_text"
                android:text="Tantangan"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/image_act_main_about"
            android:layout_width="@dimen/size_button_navigation_page"
            android:layout_height="@dimen/size_button_navigation_page"
            android:layout_margin="@dimen/margin_button_navigation_page"
            android:src="@drawable/about"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/image_act_main_exit"
            android:layout_width="@dimen/size_button_navigation_page"
            android:layout_height="@dimen/size_button_navigation_page"
            android:layout_margin="@dimen/margin_button_navigation_page"
            android:src="@mipmap/ic_exit"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
