<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="id.developer.lynx.damapps.ActivityMain">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="?attr/colorPrimary"-->
            <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/text_act_main_latihan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRedLight"
            android:padding="@dimen/act_main_padding_text"
            android:layout_marginBottom="@dimen/act_main_margin_text"
            android:text="Latihan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/text_act_main_tantangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueLight"
            android:padding="@dimen/act_main_padding_text"
            android:layout_marginBottom="@dimen/act_main_margin_text"
            android:text="Tantangan"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/text_act_main_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGreenLight"
            android:padding="@dimen/act_main_padding_text"
            android:layout_marginBottom="@dimen/act_main_margin_text"
            android:text="About"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/text_act_main_keluar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorGrayLight"
            android:padding="@dimen/act_main_padding_text"
            android:text="Keluar"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
